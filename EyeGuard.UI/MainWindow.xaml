                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock  VerticalAlignment="Center" Text="Take long break every"/>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Grid.Column="2">
                    <ComboBox MinWidth="60" ItemsSource="{Binding LongBreakPeriods}" />
                    <TextBlock Text="For" VerticalAlignment="Center" Margin="8 0" />
                    <ComboBox MinWidth="60" ItemsSource="{Binding LongBreakPeriods}"/>
                </StackPanel>
                <TextBlock VerticalAlignment="Center" Grid.Row="1" Text="Take short break every"/>
                <StackPanel Margin="0 8" Grid.Row="1" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                   <ComboBox MinWidth="60" ItemsSource="{Binding LongBreakPeriods}" />
                   <TextBlock Text="For" Margin="8 0" VerticalAlignment="Center"/>
                   <ComboBox MinWidth="60" ItemsSource="{Binding LongBreakPeriods}" />
                </StackPanel>
                <TextBlock VerticalAlignment="Center" Grid.Row="2" Text="Notify me about long break"/>
                <ComboBox Grid.Row="2" Margin="0 8" ItemsSource="{Binding LongBreakPeriods}" Grid.Column="2"/>
                <TextBlock VerticalAlignment="Center" Grid.Row="3" Text="Display full window in short breaks"/>
                <ToggleButton Style="{StaticResource ToggleButtonSwitch}" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="2"/>
                <TextBlock VerticalAlignment="Center" Grid.Row="4" Text="Enable inactivity tracker"/>
                <ToggleButton Style="{StaticResource ToggleButtonSwitch}" HorizontalAlignment="Left" Margin="0 8" Grid.Row="4" Grid.Column="2"/>
